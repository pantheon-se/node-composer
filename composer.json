    "keywords": [
        "node.js",
        "npm",
        "yarn",
        "frontend",
        "javascript"
    ],
    "homepage": "https://github.com/pantheon-se/node-composer",
    "authors": [
        {
            "name": "Marius BÃ¼scher",
            "email": "marius.buescher@gmx.de"
        },
        {
            "name": "Kyle Taylor",
            "email": "kyletaylored@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PantheonSalesEngineering\\NodeComposer\\": "src/"
        }
    },
    "require": {
        "php": ">=7.1",
        "composer/composer": "^1.4 || ^2.0",
        "composer-plugin-api": "^1.0 || ^2.0",
        "symfony/process": "~4 || ~5 || ~6",
